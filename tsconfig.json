{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // https://webpack.js.org/configuration/configuration-languages/#typescript
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
    // Для абсолютного импорота
    // "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
